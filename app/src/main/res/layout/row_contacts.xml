<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/sms_bl_cardviewRow"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_view_margin_bottom"
    card_view:cardBackgroundColor="@color/md_grey_50"
    card_view:cardElevation="2dp"
    card_view:contentPadding="4dp"
    card_view:cardCornerRadius="3dp">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/contact_avatar"
                android:src="@drawable/ic_contacts_filled_100"/>



            <com.andexert.library.RippleView
                android:id="@+id/more"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:layout_margin="5dp"
                card_view:rv_color="@color/md_amber_200"
                rv_centered="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <com.edxavier.cerberus_sms.helpers.TextViewHelper
                    android:id="@+id/lbl_contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/md_teal_800"
                    android:text="Eder Xavier Rojas"
                    />

                <com.edxavier.cerberus_sms.helpers.TextViewHelper
                    android:id="@+id/lbl_contact_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8494 3267"
                    />

                <com.edxavier.cerberus_sms.helpers.TextViewHelper
                    android:id="@+id/lbl_contact_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            </com.andexert.library.RippleView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:orientation="vertical"
                android:gravity="end"
                android:padding="4dp">

                <com.edxavier.cerberus_sms.helpers.TextViewHelper
                    android:id="@+id/lbl_contact_operator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_green_400"
                    android:textSize="12sp"
                    android:text="Movistar"
                    />

                <ImageView
                    android:id="@+id/contactFlagImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:id="@+id/vert_popup"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_gravity="end|top"
                android:src="@drawable/ic_navigation_more_vert"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content" />


        </LinearLayout>



</android.support.v7.widget.CardView>
